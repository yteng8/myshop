<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yt.mapper.repository.UserRepository">
    <!-- 根据用户名查找用户 -->
    <select id="findByUsername" resultMap="usermap">
        SELECT system_user.username, system_user.`password`, system_role.rolename
        FROM system_user
        JOIN system_user_role
        on system_user.id = system_user_role.userId
        join system_role
        on system_role.id = system_user_role.roleId
        WHERE system_user.username = #{username}
    </select>
    <resultMap id="usermap" type="com.yt.entity.User">
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="role" column="rolename"/>
    </resultMap>

    <!-- 插入用户用户名和密码 -->
    <insert id="insertUsernameAndPassword" parameterType="com.yt.entity.User" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into system_user(username,password) values(#{username},#{password})
    </insert>

    <!-- 插入用户所拥有的角色 -->
    <insert id="insertRolename" parameterType="com.yt.model.user.Role" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into system_role(rolename) values(#{rolename})
    </insert>
    <insert id="insertUserIdAndRoleId" parameterType="java.lang.Integer">
        insert into system_user_role(userId,roleId) values(#{userId},#{roleId})
    </insert>

</mapper>